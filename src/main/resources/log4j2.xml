<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Properties>
		<Property name="LOG_ROOT">$${env:HOME}/.local/share/textify/logs/</Property>
	</Properties>
	<Appenders>
		<Console name="ConsoleAppender" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%style{%date{DEFAULT}}{yellow} [%t] %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} %logger{36} - %message\n" />
		</Console>
		<RollingFile name="ROLLING_FILE_APPENDER"
			fileName="${LOG_ROOT}/swt.textify.log"
			filePattern="${LOG_ROOT}/swt.textify-%d{yyyy-MM-dd}-%i.log.gz">
			<PatternLayout
				pattern="%d{DEFAULT} [%t] %-5level %logger{36} - %msg%n" />
			<Policies>
				<!-- 20MB max -->
				<SizeBasedTriggeringPolicy size="19500KB" />
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="debug">
			<AppenderRef ref="ConsoleAppender" />
		</Root>
		<Logger name="swt.textify" level="debug">
			<AppenderRef ref="ROLLING_FILE_APPENDER" />
		</Logger>
	</Loggers>
</Configuration>
